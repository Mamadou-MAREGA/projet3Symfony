{% extends 'base.html.twig' %}
{% block title %}Admin{% endblock %}
{% block monTitre %}Page d'administration Type{% endblock %}
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <a href="{{ path('ajoutType') }}" class="btn btn-success">Ajouter</a>
    <table class="table">
        <tr class="table-primary">
            <td>Image</td>
            <td>Type</td>
            <td>Actions</td>
        </tr>
        {% for type in types %}
            <tr>
                <td><img src="{{asset('images/types/' ~ type.image)}}" alt="" class="perso_imgAlimentAdmin"></td>
                <td><strong>{{ type.libelle  }}</strong></td>

                <td>
                    <a href="{{path('modifType', {'id' : type.id})}}" class="btn btn-secondary">Modifier</a>
                    <form method="post" style="display:inline-block" action="{{ path('supType', {'id' : type.id})}}">
                        <input type="hidden" name="_method" value="delete">
                        <input type="hidden" name="_token" value="{{csrf_token('SUP' ~ type.id) }}">
                        <input type="submit" class="btn btn-danger" value="supprimer" onsubmit="return confirm('Confirmer la suppression ?')">
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}